@model EPAM.RDPreEducationPortal.Web.Site.Models.AttendeeDetailsModel
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Webinar Attendence Sheets Upload</h2>


@using (Html.BeginForm("Create", "AttendeeDetails", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <hr />
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="isa_success">
            <i class="fa fa-check"></i>
            @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="isa_error">
            <i class="fa fa-times-circle"></i>
            @Model.ErrorMessage
        </div>
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-4"> Webinar Attendance Report</label>
        @*@Html.LabelFor(model => model.RepositoryUrl, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-8">
            <input type="file" id="dataFile" name="upload" />
            @*@Html.ValidationMessageFor(model => model.RepositoryUrl, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4"> Webinar Registration Report</label>
        @*@Html.LabelFor(model => model.RepositoryUrl, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-8">
            <input type="file" id="dataFile" name="upload" />
            @*@Html.ValidationMessageFor(model => model.RepositoryUrl, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4">Send Email</label>
        <div class="col-md-8">
            <input type="checkbox" id="SendEmail" class="  cccheckbox checkbox-inline" name="SendEmail" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Upload" class="btn btn-success" />
        </div>
    </div>
</div>

}
