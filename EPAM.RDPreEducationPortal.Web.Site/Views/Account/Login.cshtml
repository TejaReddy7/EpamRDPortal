@model EPAM.RDPreEducationPortal.Web.Site.Models.AccountModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/LoginLayout.css" rel="stylesheet" />
<script src="~/Scripts/notify.min.js"></script>
<body style="background-image: url('../../Content/Images/startbanner-desktop.jpg');  background-repeat: no-repeat;  background-size: auto; height: 100%;background-size: cover;">
    @*<div class="bg background-img"></div>*@
    <div class="container login-page bg background-img">
        <div class="back-video">
            <video autoplay muted loop id="myVideo">
                <source src="~/Content/Homepage-Promo.mp4" type="video/mp4">
            </video>
        </div>
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        Sign In
                        <div style="float:right; font-size: 80%; position: relative; ">
                            <img style="width:70px" src="~/Content/Images/logo.png" class="img-fluid" />
                        </div>
                    </div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div style="margin-bottom: 25px" class="input-group text-box">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Enter your username", type = "text" })
                            @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">*@
                        </div>

                        <div style="margin-bottom: 25px" class="input-group text-box">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Enter your password", type = "password" })
                        </div>
                        <div style="margin-top:10px" class="form-group">

                            <div class="col-sm-12 text-center controls">
                                <input type="submit" id="btn-login" name="btn-login" class="btn btn-success btn-login btn-md" value="Login">
                                <br /><br />
                                <a class="disabled" href="#">
                                    Forgot Password
                                </a>
                            </div>
                        </div>

                        <div class="form-group col-sm-12 text-center">
                            <div class="col-md-12 control">
                                <br />
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                    Don't have an account!
                                    <a href="#">
                                        Sign Up Here
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $("#btn-login").click(function () {
            if ($("#UserName").val() == "" || $("#Password").val() == "") {
                $.notify("Please enter username or password", "");
                return false;
            }
        });
    </script>
</body>
