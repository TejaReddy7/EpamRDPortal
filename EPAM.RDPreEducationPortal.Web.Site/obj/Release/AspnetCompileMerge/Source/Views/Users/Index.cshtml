@using EPAM.RDPreEducationPortal.Web.Site.EntityFramework
@model IEnumerable<EPAM.RDPreEducationPortal.Web.Site.EntityFramework.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new EpamRDPreEducationEntities();
}
<div class="container">
    <h2>Users</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
              Role
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @db.Master_Roles.Find(item.RoleId).RoleName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @*@if (db.Master_Gender != null)
                    {
                        @db.Master_Gender.Find(item.GenderId).Gender
                    }*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td> 
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.UserId })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                </td>
            </tr>
        }
    </table>
</div>