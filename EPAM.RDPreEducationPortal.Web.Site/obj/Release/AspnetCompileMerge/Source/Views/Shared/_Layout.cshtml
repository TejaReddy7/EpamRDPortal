                                    <i class="icon-search"></i>*@
                            </div>

                            <div id="menuProfileLink" class="menu-widget">
                                <div class="photo-wrap" style="background-image: url('/Content/Images/menicon.jpg')"></div>
                                <div id="divLogout" class="id-card" style="display: none;"><a href="/Account/Logout">Logout</a></div>
                            </div>

                            @*<div id="global_menu_toggle" class="menu-widget"><div style="position: absolute; left: 35px; top: 19px; background: rgb(255, 45, 60); box-shadow: rgba(255, 45, 60, 0.8) 0px 0px 6px 1px; border-radius: 50%; width: 6px; height: 6px;"></div></div>*@
                        </div>
                    </div>
                    @*<div class="title-panel-background"></div>*@

                    <script type="text/javascript">
                        var actualHelpLink = 'https://kb.epam.com/display/UPSA/Your+personal+profile';
                    </script>
                </div>
            </div>
        </div>
        @*<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
