@using EPAM.RDPreEducationPortal.Web.Site.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:image" content="https://careers.epam.by/etc/designs/epam-core/images/common/logo.png">

    <title>@ViewBag.Title</title>
    <link rel='shortcut icon' type='image/x-icon' href='~/Content/Images/fav.png' />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">*@
