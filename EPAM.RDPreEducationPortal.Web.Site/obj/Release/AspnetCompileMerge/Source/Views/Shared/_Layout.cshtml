    <link rel="stylesheet"
          href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" />
    <script type="text/javascript"
            src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript"
            src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="upsaMinSize">

            <div id="header-wrap">
                <div id="topMenu">
                    <div id="mainMenu" class="mainMenu">
                        <a href="/Dashboard" id="upsaLogo">
                            <span class="upsa-logo-text">RD PORTAL</span>
                        </a>
                        <ul id="top-list-menu">
                            @if (UserDetailsSingleton.Instance.Role == "TechnicalInterviewer")
                            {
                                <li data-submenu-id="my-info" id="myInfoMenu" class="toplevel">
                                    <a href="/CandidateDetails" class="link-menu haveMenu">Feedback</a>
                                </li>
                                <li data-submenu-id="my-info" id="myInfoMenu" class="toplevel">
                                    <a href="/TechnicalAssessments" class="link-menu haveMenu">My Feedbacks</a>
                                </li>
                            }
                            @if (UserDetailsSingleton.Instance.Role == "HR")
                            {
                                <li data-submenu-id="my-info" id="myInfoMenu" class="toplevel">
                                    <a href="/CandidateDetails/HREligible" class="link-menu haveMenu">Feedback</a>
                                </li>
                                <li data-submenu-id="my-info" id="myInfoMenu" class="toplevel">
                                    <a href="/HRAssessments" class="link-menu haveMenu">My Feedbacks</a>
                                </li>
                            }
                            @if (UserDetailsSingleton.Instance.Role == "Student")
                            {
                                <li data-submenu-id="my-info" id="myInfoMenu" class="toplevel">
                                    <a href="/GitRepositories" class="link-menu haveMenu">Git Repositories</a>
                                </li>
                                 
                            }
                            @if (UserDetailsSingleton.Instance.Role == "Admin")
                            {
                                <li data-submenu-id="reports-menu" id="reportsMenu" class="toplevel">
                                    <a href="#" class="link-menu haveMenu">Reports</a><div id="reports-menu" class="insideListWrap" style="display: none;">
                                        <div class="insideList">
                                            <ul>
                                                <li>
                                                    <a href="/AttendanceReport">Attendance Report</a>
                                                </li>
                                                <li>
                                                    <a href="/Report/Recruitment">Recruitment Report</a>
                                                </li>
                                                <li>
                                                    <a href="/Report/RecruitmentMaster">Recruitment Master Report</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>

                                <li data-submenu-id="admin-menu" id="adminMenu" class="toplevel">
                                    <a href="#" class="link-menu haveMenu" target="_blank">Admin</a>
                                    <div id="help-menu" class="insideListWrap" style="display: none;">
                                        <div class="insideList">
                                            <ul>
                                                <li>
                                                    <a href="/Roles">
                                                        Roles
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/Recruitments">
                                                        Recruitments
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/TestsHosted">
                                                        Tests Hosted
                                                    </a>
                                                </li>
                                                <li>
                                                    <a id="upsaHelpLink" href="/Tasks" target="_blank">
                                                        Tasks
                                                    </a>
                                                </li>
                                                <li data-submenu-id="summary-menu" id="summaryMenu" class="toplevel">
                                                    <a href="/AttendeeDetails/Create" class="">Attendance-Upload</a>
                                                </li>
                                                <li>
                                                    <a href="/Locations">
                                                        Locations
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/Users">
                                                        Users
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/CandidateDetails/UploadCandidates">
                                                       Upload Coding Challenge Excel
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                            <li data-submenu-id="help-menu" id="helpMenu" class="toplevel">
                                <a href="#" class="link-menu haveMenu" target="_blank">Help</a><div id="help-menu" class="insideListWrap" style="display: none;">
                                    <div class="insideList">
                                        <ul>
                                            <li>
                                                <a id="upsaHelpLink" href="https://kb.epam.com/display/UPSA/Your+personal+profile" target="_blank">
                                                    On-Line Help
                                                </a>
                                            </li>
                                            <li id="onboardDialogLink" style="display: none;">
                                                <a href="#">
                                                    Page Guide
                                                </a>
                                            </li>
                                            <li>
                                                <a href="https://kb.epam.com/x/gwWzAQ" target="_blank">
                                                    What's new
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        </ul>

                        <div id="headerOptions">
                            <div id="searchByName">
                                Welcome to @Html.Raw(UserDetailsSingleton.Instance.Name)
                                @*Welcome to Raja Sekhar Tadepalli @{UserDetailsSingleton.Instance.GetUserDetails().FirstName}*@
