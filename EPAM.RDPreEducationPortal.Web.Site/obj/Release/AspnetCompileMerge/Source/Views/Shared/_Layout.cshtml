                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>*@

    </div>
    <div class="body-content" style="margin-top: 50px !important;margin: 50px !important">
        @RenderBody()
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@

    </div>
    <div class="site-footer">
        <div>
            <div style="left: 50px;">
                <span class="epam-logo">
                    <a href="https://kb.epam.com/x/gwWzAQ" target="_blank">
                        RD-Pre Education version: 7.1.026, Node2
                    </a>
                </span>
            </div>
            <div style="right: 50px;">
                <span class="help-link">
                    <a href="https://kb.epam.com/display/UPSA/Your+personal+profile" target="_blank">Help</a>
                </span>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script type="text/javascript">
        $("#menuProfileLink").click(function () {
            $("#divLogout").toggle("slow");
        });
        $(".toplevel").hover(function () {
            $(this).children("div").slideDown("slow");
        }, function () {
            $(this).children("div").hide();
        });
    </script>
</body>
</html>
