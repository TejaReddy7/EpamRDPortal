@model EPAM.RDPreEducationPortal.Web.Site.Models.GitRepositoriesModel
@{
    /**/

    ViewBag.Title = "Bulk Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tasks Bulk Upload</h2>


@using (Html.BeginForm("BulkUpload", "GitRepositories", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <hr />
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="isa_success">
            <i class="fa fa-check"></i>
            @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="isa_error">
            <i class="fa fa-times-circle"></i>
            @Model.ErrorMessage
        </div>
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-4"> GIT Tasks Sheet</label>
        <div class="col-md-8">
            <input type="file" id="dataFile" name="upload" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Upload" class="btn btn-success" />
        </div>
    </div>
</div>

}
